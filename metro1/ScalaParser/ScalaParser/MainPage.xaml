<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScalaParser.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10">

            <!-- Заголовок -->
            <Label Text="Метрики Холстеда" FontSize="30" HorizontalOptions="Center" />

            <!-- Поле для ввода кода -->
            <Editor x:Name="TextBox" Placeholder="Введите код на Scala..." HeightRequest="150" />

            <!-- Кнопка для парсинга -->
            <Button Text="Парсить код" Clicked="OnParseButtonClicked" FontSize="20" />

            <!-- Таблица с операторами и операндами -->
            <Grid Padding="10" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto">
                <Label Text="Оператор" FontAttributes="Bold" />
                <Label Text="Частота" FontAttributes="Bold" Grid.Column="1" />
                <Label Text="Операнд" FontAttributes="Bold" Grid.Column="2" />
                <Label Text="Частота" FontAttributes="Bold" Grid.Column="3" />
            </Grid>

            <CollectionView x:Name="MetricsTable">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" ColumnDefinitions="*,*,*,*">
                            <Label Text="{Binding Operator}" />
                            <Label Text="{Binding OperatorFrequency}" Grid.Column="1" />
                            <Label Text="{Binding Operand}" Grid.Column="2" />
                            <Label Text="{Binding OperandFrequency}" Grid.Column="3" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Информация по Холстеду -->
            <Label x:Name="HolstedInfoLabel" FontSize="18" Padding="10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
